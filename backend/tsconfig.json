{
    "compilerOptions": {
      "target": "ES2020",
      "module": "commonjs",
      "outDir": "./dist",
      "removeComments": true,
      "noEmitOnError": true,
      "strict": true,
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "rootDir": "./src",
      "sourceMap": true,
      "noImplicitReturns": true,
      "noUnusedLocals": true
    },
    "include": ["src/**/*"]
  }  